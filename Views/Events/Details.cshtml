@{
}

@model EventManagementSystem.Models.Entities.Event

<h1>Event Details</h1>

@if(Model is not null)
{
    <div class="card card-body mb-3">
        <h2>Name: @Model.Name</h2>
        <h3>Price: $@Model.Price</h3>
        <p>Description: @Model.Description</p>
        <span>@Model.Date</span>

        <form asp-controller="Events" asp-action="Delete" asp-route-id="@Model.Id" method="post">
            <div class="mt-3">
                <button type="submit" class="btn btn-danger">Delete</button>
            </div>
        </form>
        <a class="btn btn-info" asp-controller="Reviews" asp-action="Add" asp-route-id="@Model.Id">Add Reviews</a>
        <a class="btn btn-info" asp-controller="Reviews" asp-action="List" asp-route-id="@Model.Id">List Reviews</a>
    </div>
}
else
{
    <p>Event details not found or the event doesn't exist anymore</p>
}