@{
}

@model List<EventManagementSystem.Models.Entities.Event>

<h1>Events</h1>

@foreach(var eventDetails in Model)
{
    <div class="card card-body mb-3">
        <h2>Name: @eventDetails.Name</h2>
        <h3>Price: $@eventDetails.Price</h3>
        <p>Description: @eventDetails.Description</p>
        <span>@eventDetails.Date</span>

        <div class="mt-3">
            <a asp-controller="Events" asp-action="Details" asp-route-id="@eventDetails.Id" class="btn btn-primary">View Details</a>
        </div>
    </div>
}
